<Window x:Class="SPP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pembayaran SPP MA TAHFIDH ANNUQAYAH" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#FF4A90E2" Padding="10">
            <TextBlock Text="Pembayaran SPP MA TAHFIDH ANNUQAYAH" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
            <Button Content="Dashboard" Width="100" Margin="5" Click="DashboardButton_Click"/>
            <Button Content="Payments" Width="100" Margin="5" Click="PaymentsButton_Click"/>
            <Button Content="Student Login" Width="100" Margin="5" Click="StudentLoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>