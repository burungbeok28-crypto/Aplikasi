<Window x:Class="SPP.App.Views.StudentLoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Login" Height="400" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0"/>
                <GradientStop Color="#FFE1F5FE" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Login to Your Account" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox Name="UsernameTextBox" Width="250" Margin="0,0,0,10" PlaceholderText="Username"/>
            <PasswordBox Name="PasswordBox" Width="250" Margin="0,0,0,20" PlaceholderText="Password"/>
            <Button Name="LoginButton" Width="250" Content="Login" Click="LoginButton_Click" Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
            <TextBlock Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>