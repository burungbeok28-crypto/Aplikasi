<Window x:Class="SPP.App.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="450" Width="800"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#FF4A90E2" Padding="10">
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            <Button Content="Logout" Width="100" Margin="10,0,0,0" Click="LogoutButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#FFEFEFEF" Padding="10">
                <TextBlock Text="Menu" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="Payments" Margin="0,5" Click="PaymentsButton_Click"/>
                <Button Content="Students" Margin="0,5" Click="StudentsButton_Click"/>
                <Button Content="Reports" Margin="0,5" Click="ReportsButton_Click"/>
            </StackPanel>

            <ContentControl Grid.Column="1" x:Name="MainContent" Margin="10">
                <!-- Content will be loaded here based on menu selection -->
            </ContentControl>
        </Grid>
    </Grid>
</Window>